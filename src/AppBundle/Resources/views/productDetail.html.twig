{% extends "AppBundle::base.html.twig" %}

{% block productDetail %}    
    <div class="single-product-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="product-content-right">
                        <div class="product-breadcroumb">
                            <a href="{{ url( 'homepage' ) }}">Home</a>
                            <a href="productDetail?sku={{ products['product']["sku"] }}">{{ products['product']['name'] }}</a>
                        </div>
                        
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="product-images">
                                    <div class="product-main-img">
                                        <img src="{{ products['product']['url'] }}" alt="">
                                    </div>
                                    
                                    <div class="product-gallery">
                                        <img src="{{ products['product']['url2'] }}" alt="">
                                        <img src="{{ products['product']['url3'] }}" alt="">
                                        <img src="{{ products['product']['url4'] }}" alt="">
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-sm-6">
                                <div class="product-inner">
                                    <h2 class="product-name">{{ products['product']['name'] }} </h2>
                                    <div class="product-inner-price">
                                        <ins>Rs. {{ products['product']['originalPrice'] - products['product']['discountPrice'] }} /-</ins> <del>Rs. {{ products['product']['originalPrice'] }} </del>
                                    </div>    
                                    
                                    <form action="" class="cart">
                                        <div class="quantity">
                                            <input type="number" size="4" class="input-text qty text" title="Qty" value="1" name="quantity" min="1" step="1">
                                        </div>
                                        <button class="add_to_cart_button" type="submit">Add to cart</button>
                                    </form>   
                                    
                                    <div class="product-inner-category">
                                        <p><strong>Category:</strong> <a href="">
                                                {{ products['product']['category'] }}
                                            </a> <br />
                                            <strong>Tags:</strong> {{ products['product']['tags'] }} </p>
                                    </div> 
                                    
                                    <div role="tabpanel">
                                        <ul class="product-tab" role="tablist">
                                            <li role="presentation" class="active"><a href="#" aria-controls="home" role="tab" data-toggle="tab">Description</a></li>
                                            {#<li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Reviews</a></li>#}
                                        </ul>
                                        <div class="tab-content">
                                            <div role="tabpanel" class="tab-pane fade in active" id="home">
                                                <h2>Product Description</h2>  
                                                <p>{{ products['product']['description'] }}</p>

                                            </div>
{#                                            <div role="tabpanel" class="tab-pane fade" id="profile">
                                                <h2>Reviews</h2>
                                                <div class="submit-review">
                                                    <p><label for="name">Name</label> <input name="name" type="text"></p>
                                                    <p><label for="email">Email</label> <input name="email" type="email"></p>
                                                    <div class="rating-chooser">
                                                        <p>Your rating</p>

                                                        <div class="rating-wrap-post">
                                                            <i class="fa fa-star"></i>
                                                            <i class="fa fa-star"></i>
                                                            <i class="fa fa-star"></i>
                                                            <i class="fa fa-star"></i>
                                                            <i class="fa fa-star"></i>
                                                        </div>
                                                    </div>
                                                    <p><label for="review">Your review</label> <textarea name="review" id="" cols="30" rows="10"></textarea></p>
                                                    <p><input type="submit" value="Submit"></p>
                                                </div>
                                            </div>#}
                                        </div>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
            
                        <!-- will be repalced with recomendations -->                                    
                        <div class="maincontent-area">
                            <div class="zigzag-bottom"></div>
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="latest-product">
                                            <h2 class="section-title">Recomended Products</h2>
                                            <div class="product-carousel">
                                                <!-- will be replaced with recomemded products -->
                                             {% for product in products['latest'] %}   
                                                <div class="single-product">
                                                    <div class="product-f-image">
                                                        <img src="{{ product["url"] }}" alt="">
                                                        <div class="product-hover">
                                                            <a href="#" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                                                        </div>
                                                    </div>
                                                    <h2><a href="productDetail?sku={{ product["sku"] }}">{{ product["name"] }}</a></h2>
                                                    <div class="product-carousel-price">
                                                        <ins>Rs.{{ product["originalPrice"] - product["discountPrice"] }}/-</ins> <del>Rs.{{ product["originalPrice"]}}/-</del>
                                                    </div> 
                                                </div>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div> <!-- End main content area -->
    
                        
                    </div>                    
                </div>
            </div>
        </div>
    </div>
{% endblock %}