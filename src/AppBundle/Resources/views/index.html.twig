{% extends "AppBundle::base.html.twig" %}

{% block main %}
<div class="slider-area">
        <!-- Slider -->
        <div class="block-slider block-slider4">
                <ul class="" id="bxslider-home4">
                    {% for product in products['featured'] %}
                        <li>
                                <img src="{{ product['url'] }}" style="height: 400px; width: 1200px;">
                                <div class="caption-group">
                                        <h2 class="caption title">
                                                {{ product["name"] }} <span class="primary"> <del>Rs {{ product["originalPrice"] }} /-</del> 
                                                    <strong> &nbsp;Rs.{{ product["originalPrice"] - product["discountPrice"] }} /-</strong></span>
                                        </h2>
                                        <h4 class="caption subtitle">{{ product["description"] }}</h4>
                                        <a class="caption button-radius" href="productDetail?sku={{ product["sku"] }}"><span class="icon"></span>Shop now</a>
                                </div>
                        </li>
                    {% endfor %}
                </ul>
        </div>
	<!-- ./Slider -->
    </div> <!-- End slider area -->
    
    <div class="promo-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <div class="single-promo promo1">
                        <i class="fa fa-refresh"></i>
                        <p>30 Days return</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="single-promo promo2">
                        <i class="fa fa-truck"></i>
                        <p>Free shipping</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="single-promo promo3">
                        <i class="fa fa-lock"></i>
                        <p>Secure payments</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="single-promo promo4">
                        <i class="fa fa-gift"></i>
                        <p>New products</p>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End promo area -->
    
    <div class="maincontent-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="latest-product">
                        <h2 class="section-title">Latest Products</h2>
                        <div class="product-carousel">
                         {% for product in products['latest'] %}   
                            <div class="single-product">
                                <div class="product-f-image">
                                    <img src="{{ product["url"] }}" alt="">
                                    <div class="product-hover">
                                        <a href="#" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                                    </div>
                                </div>
                                <h2><a href="productDetail?sku={{ product["sku"] }}">{{ product["name"] }}</a></h2>
                                <div class="product-carousel-price">
                                    <ins>Rs.{{ product["originalPrice"] - product["discountPrice"] }}/-</ins> <del>Rs.{{ product["originalPrice"]}}/-</del>
                                </div> 
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End main content area -->
{% endblock %}    