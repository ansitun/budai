{% extends "AppBundle::base.html.twig" %}

{% block productCategory %} 

<!-- will be repalced with recomendations -->                                    
<div class="maincontent-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="latest-product">
                    <h2 class="section-title">Products related to <u>{{ products["productCategory"] }}</u></h2>
                    <div class="product-carousel">
                        <!-- will be replaced with recomemded products -->
                     {% for product in products['products'] %}   
                        <div class="single-product">
                            <div class="product-f-image">
                                <img src="{{ product["url"] }}" alt="">
                                <div class="product-hover">
                                    <a href="#" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                                </div>
                            </div>
                            <h2><a href="productDetail?sku={{ product["sku"] }}">{{ product["name"] }}</a></h2>
                            <div class="product-carousel-price">
                                <ins>Rs.{{ product["originalPrice"] - product["discountPrice"] }}/-</ins> <del>Rs.{{ product["originalPrice"]}}/-</del>
                            </div> 
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
<!-- End main content area -->

{% endblock%}